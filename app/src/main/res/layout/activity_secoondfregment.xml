<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.eduaction.secondfragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <Button
            android:id="@+id/heiban"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/timg"
            android:gravity="top"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:bottomLeftRadius="100px"
            android:bottomRightRadius="100px"
            android:topLeftRadius="100px"
            android:topRightRadius="100px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/s_button"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="基于信息推荐"
            android:background="#E0E0E0"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="70dp" />
        <Button
            android:id="@+id/button4"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="基于位次推荐"
            android:background="#E0E0E0"/>
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注：\n本推荐系统分为两部分，在高考得知您的全省（市）排名后您可以选择基于位次的排名，来初步估计您的报考情况；在得知自己的分数后，可以使用基于信息的推荐，以获得更加准确的推荐。\n在使用过程中可能会出现数据不足等问题敬请谅解。" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
